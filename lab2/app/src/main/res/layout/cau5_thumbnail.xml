<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_thumbnail_cl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_thumbnail_tv_thumbnail_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="Thumbnail"
        android:textSize="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/item_thumbnail_iv_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_thumbnail_iv_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="20dp"

        android:src="@drawable/first_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>